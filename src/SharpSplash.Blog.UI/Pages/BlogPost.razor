<MudItem xs="2"/>
<MudItem xs="8">
    <MudGrid>

        <MudItem xs="2">
            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudImage Src="@($"{Post.Metadata.Hero.ImgIxUrl}?w=100&h=100&q=50&fit=crop")"/>
            </MudHidden>
            <MudHidden Breakpoint="Breakpoint.MdAndUp">
                <MudImage Src="@($"{Post.Metadata.Hero.ImgIxUrl}?w=35&h=35&q=50&fit=crop")"/>
            </MudHidden>
        </MudItem>
        <MudItem xs="10">
            <MudLink Href="@($"/post/{Post.Slug}/{PageLocation}")" Underline="Underline.None"
                     Color="Color.Default" Typo="Typo.h6" Class="ml-1">
                @Post.Title
            </MudLink>
            <MudText Typo="Typo.body2" Class="mt-5 ml-1">
                @((MarkupString) Post.Metadata.Teaser)
            </MudText>
        </MudItem>
        <MudItem xs="8">
            @foreach (var category in Post.Metadata.Categories)
            {
                <MudChip Label="true" Color="category.Color" Size="Size.Small">
                    @category.Title
                </MudChip>
            }
        </MudItem>
        <MudItem xs="4" Class="d-flex justify-end">
            @if (Post.Metadata.DatePublishedDateTime.HasValue)
            {
                <MudText Typo="Typo.caption" Class="mt-2">
                    @Post.Metadata.DatePublishedDateTime.Value.ToString("dd/MM/yyyy")
                </MudText>
            }
        </MudItem>
        <MudItem xs="12">
            <MudElement HtmlTag="div" Class="blog-divider"/>
        </MudItem>
    </MudGrid>
</MudItem>
<MudItem xs="2"/>